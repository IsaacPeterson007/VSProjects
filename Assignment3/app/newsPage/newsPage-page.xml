<Page class="background"
    navigatingTo="onNavigatingTo"  
    loaded="onPageLoaded"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <GridLayout rows="auto" columns="*" height="30">
            <Label row="0" class="action-bar-title" text="News Article" horizontalAlignment="center" verticalAlignment="top"></Label>
            <Image row="0" src="~/images/back.png" width="30" height="30" horizontalAlignment="left" verticalAlignment="top" tap="backBtn"/>
        </GridLayout>
    </ActionBar>

    <ScrollView>
        <StackLayout id="newsPage">
            <!-- This page will be auto populated with data passed in from home page about one article -->
        </StackLayout>
    </ScrollView>
</Page>
